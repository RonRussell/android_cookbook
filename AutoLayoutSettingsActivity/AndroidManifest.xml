<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tco.examples.autolayoutsettings"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tco.examples.autolayoutsettings.ExampleDriverActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.tco.examples.autolayoutsettings.AutoLayoutSettingsActivity"
            android:label="@string/title_activity_auto_layout_settings" >
        </activity>
        
        <activity
            android:name="com.tco.examples.autolayoutsettings.MySettingsActivity"
            android:label="@string/title_activity_my_settings" >
        </activity>
    </application>

</manifest>